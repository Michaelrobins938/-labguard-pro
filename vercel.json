{
  "buildCommand": "cd apps/web && npm run build",
  "outputDirectory": "apps/web/.next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "functions": {
    "apps/web/src/app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "rewrites": [
    {
      "source": "/dashboard/(.*)",
      "destination": "/dashboard"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/admin"
    }
  ],
  "routes": [
    {
      "src": "/dashboard",
      "dest": "/dashboard"
    },
    {
      "src": "/admin",
      "dest": "/admin"
    }
  ]
} 