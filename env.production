# LabGuard Pro Production Environment Configuration

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://labguard_user:labguard_password@postgres:5432/labguard_prod
DB_USER=labguard_user
DB_PASSWORD=labguard_password
DB_HOST=postgres
DB_PORT=5432
DB_NAME=labguard_prod

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://:labguard_redis_pass@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=labguard_redis_pass
REDIS_DB=0

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
NEXTAUTH_SECRET=your-super-secret-nextauth-key-change-in-production
NEXTAUTH_URL=https://app.labguardpro.com

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_BASE_URL=https://api.labguardpro.com/api
NEXT_PUBLIC_API_URL=https://api.labguardpro.com
NEXT_PUBLIC_APP_URL=https://app.labguardpro.com
PORT=3001

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# =============================================================================
# OPENAI AI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# EMAIL CONFIGURATION (SendGrid)
# =============================================================================
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@labguardpro.com
SENDGRID_FROM_NAME=LabGuard Pro

# =============================================================================
# SMS CONFIGURATION (Twilio)
# =============================================================================
TWILIO_ACCOUNT_SID=AC_your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info
NODE_ENV=production

# =============================================================================
# GRAFANA MONITORING
# =============================================================================
GRAFANA_PASSWORD=admin

# =============================================================================
# AWS S3 BACKUP CONFIGURATION
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=labguard-backups

# =============================================================================
# SLACK NOTIFICATIONS
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# =============================================================================
# BIOMNI INTEGRATION
# =============================================================================
BIOMNI_API_KEY=your-biomni-api-key
BIOMNI_BASE_URL=https://biomni.stanford.edu/api
PYTHON_PATH=/usr/bin/python3
BIOMNI_PATH=/app/biomni
BIOMNI_DATA_PATH=/app/data
BIOMNI_LLM=claude-3-5-sonnet-latest

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
CACHE_TTL=3600
REDIS_CACHE_TTL=3600
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=900

# =============================================================================
# SECURITY HEADERS
# =============================================================================
CORS_ORIGIN=https://app.labguardpro.com
CORS_CREDENTIALS=true
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=/app/uploads

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_COMPLIANCE=true
ENABLE_BIOMNI_INTEGRATION=true
ENABLE_MOBILE_APP=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_ADVANCED_ANALYTICS=true

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
DEBUG=false
ENABLE_SWAGGER=false
ENABLE_GRAPHQL_PLAYGROUND=false

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/labguardpro.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/labguardpro.com.key

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION_LEVEL=9
BACKUP_ENCRYPTION_ENABLED=true
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# =============================================================================
# ALERTING CONFIGURATION
# =============================================================================
ALERT_EMAIL=alerts@labguardpro.com
ALERT_SLACK_CHANNEL=#alerts
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# =============================================================================
# MOBILE APP CONFIGURATION
# =============================================================================
MOBILE_APP_ENABLED=true
MOBILE_API_BASE_URL=https://api.labguardpro.com
MOBILE_APP_VERSION=1.0.0

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================
LIMS_INTEGRATION_ENABLED=false
ERP_INTEGRATION_ENABLED=false
COMMUNICATION_INTEGRATION_ENABLED=true
ANALYTICS_INTEGRATION_ENABLED=true
CLOUD_INTEGRATION_ENABLED=true 